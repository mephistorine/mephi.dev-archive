---
layout = "/layouts/base.njk"
permalink = "/tags/{{ tag }}/"

[renderData]
title = "Тэг: {{ tag }}"

[pagination]
data = "collections"
size = 1
alias = "tag"
filter = [ "all", "articles", "tags", "articlesByYear", "talks" ]
addAllPagesToCollections = true
---

<div class="container article-header">
  <div class="article-main-info">
    <h1 class="article-title">Тэг: {{ tag }}</h1>
  </div>
</div>

<div class="container">
  <ul class="article-list">
    {% set articles = collections[ tag ] %}
    {% for article in articles | reverse %}
    <li><a href="{{ article.url }}">{{ article.data.title }}</a></li>
    {% endfor %}
  </ul>
</div>
